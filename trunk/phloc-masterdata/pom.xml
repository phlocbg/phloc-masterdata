    </license>
  </licenses>
  
  <scm>
    <url>http://code.google.com/p/phloc-masterdata/source/browse/tags/phloc-masterdata-3.3.4</url>
    <connection>scm:svn:http://phloc-masterdata.googlecode.com/svn/tags/phloc-masterdata-3.3.4</connection>
    <developerConnection>scm:svn:https://phloc-masterdata.googlecode.com/svn/tags/phloc-masterdata-3.3.4</developerConnection>
